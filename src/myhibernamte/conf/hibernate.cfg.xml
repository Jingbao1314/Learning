<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- 配置数据库信息 -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/share</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="hibernate.connection.password">507721</property>
        <property name="hibernate.show_sql">true</property><!--控制台是否打印-->
        <property name="hibernate.format_sql">true</property><!--格式化sql语句-->
        <property name="hibernate.use_sql_comments">true</property><!--指出是什么操作生成了该语句-->
        <!-- 导入映射文件-->
        <mapping resource="myhibernamte/Test.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
